<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/earthquake_type_card_padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/significant"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Significant Earthquakes"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_margin="@dimen/card_padding"/>

            <Button
                android:id="@+id/mag4_5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="M4.5+ Earthquakes"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_margin="@dimen/card_padding"/>

            <Button
                android:id="@+id/mag2_5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="M2.5+ Earthquakes"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_margin="@dimen/card_padding"/>

            <Button
                android:id="@+id/mag1_0"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="M1.0+ Earthquakes"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_margin="@dimen/card_padding"/>

            <Button
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="All Earthquakes"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_margin="@dimen/card_padding"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>